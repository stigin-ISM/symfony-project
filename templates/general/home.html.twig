{% extends"./base.html.twig" %}
{% block title %} Munich Car Company - Home {% endblock %}

{% block body %}

    <div style = "background: #f4f4f4; padding: 4rem 0rem; min-height: calc(100% - 60px - 300px);" class="out">
        <div class = "in">
            <div style = "width: 100%; height: 50%; min-height: 10px; display: flex; align-items: center; justify-content: center;"><h1 >Here we can help you find your dream car for as cheap as possible</h1></div>
        </div></div>

    <div style = "width: 100%; display: grid; grid-template-columns: 1fr 1fr">
        <a href = "{{ url('contact') }}"><div style = "width: 100%; display: flex; flex-direction: column;"><img style = "width: 100%; height: 100%; object-fit: cover;" src = "{{ asset('images/home/Bmwdisplay.jpg') }}"><h2>Bmw M4 Comp 2022</h2></div></a>
        <a href = "{{ url('contact') }}"><div style = "width: 100%; display: flex; flex-direction: column;"><img style = "width: 100%; height: 100%; object-fit: cover;" src = "{{ asset('images/home/OldToyota.png') }}"><h2>Toyota Corona 1965</h2></div></a>
    </div>
    </div></div>

    <div style = "background: #f4f4f4; padding: 4rem 0rem; min-height: calc(100% - 60px - 300px);" class="out">
        <div class = "in">
            <div style = "width: 100%; height: 100%; min-height: 100px; display: flex; align-items: center; justify-content: center;"><h1>We are offering hundreds of different cars for about anybody</h1></div>
            <a href = "{{ url('contact') }}"><div style = "width: 100%; display: flex; flex-direction: column;"><img style = "width: 100%; height: 40%; object-fit: cover;" src = "{{ asset('images/contact/Loadsofcars.jpg') }}"></div></a>
            <div style = "width: 100%; height: 50%; min-height: 100px; display: flex; align-items: center; justify-content: center;"><h2>Here we can help you find your dream car for as cheap as possible</h2></div>
        </div>
    </div>
    {# Looping through the array - from database #}
    {% for car in cars %}
        <div class="text-center pt-8 pb-4">
            <img
                    src="{{ car.imagePath }}"
                    alt=""
                    class="shadow-xl rounded-md">
            <h2 class="text-gray-700 font-bold text-3xl py-2">
                {{ car.model }}
            </h2>
            <span class="text-gray-500">
                By <span class="italic text-sm text-gray-800">{{ car.seller }} </span>
            </span>
            <p class="text-base text-gray-700 pt-4 pb-10 leading-8 font-light">
                {{ car.description }}
            </p>
        </div>



    {% endfor %}
{% endblock %}












